driver:
  name: vagrant
platforms:
  - name: ubuntu-server
    box: "ubuntu/focal64"
    interfaces:
      - network_name: forwarded_port
        guest: 8881
        host: 8881
  - name: rocky-server
    box: "generic/rocky9"
    interfaces:
      - network_name: forwarded_port
        guest: 8882
        host: 8882
provisioner:
  inventory:
    host_vars:
      ubuntu-server:
        apache_http_port: 8881
        apache_server_name: "ubuntu-server.localhost"
      rocky-server:
        apache_http_port: 8882
        apache_server_name: "rocky-server.localhost"


